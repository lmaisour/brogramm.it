<div id=”newRoom”>
<fieldset>
	
<legend>Start a new party room</legend>
<%= form_for(@new_room) do |f| %>
Room Name: <%= f.text_field :name %><br/><br/>
Room Subject: <%= f.text_field :subject %> <br><br>
Public? <%= f.check_box :public %><br/><br/>

<%= f.submit %>
<% end %>
</fieldset>
</div>

<fieldset>
<legend>Existing party rooms</legend>
<table cellpadding=”2″ cellspacing=”5″>
<tr>
<th>Name</th>
<th>Started</th>
</tr>

<% @rooms.each do |room| %>
<tr>
<td align=”center” width=”300px”><a href=/show/<%= room.id %>><%= room.name %></a></td>
<td><%= room.created_at %></td>
</tr>
<% end %>
</table>
</fieldset>

